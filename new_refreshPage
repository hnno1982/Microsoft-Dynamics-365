function refreshPage()
{
//Xrm.Page.data.save();
//Xrm.Page.data.entity.save();
//Xrm.Utility.openEntityForm(Xrm.Page.data.entity.getEntityName(),Xrm.Page.data.entity.getId());



                    setTimeout
                    (
                    function ()
                    {
